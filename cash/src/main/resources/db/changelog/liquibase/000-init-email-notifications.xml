<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="init_email_notifications" author="roman">
        <preConditions onFail="WARN">
            <tableExists tableName="email_notifications"/>
        </preConditions>
        <createTable tableName="email_notifications">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="subject" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="varchar(4000)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="email_notifications"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
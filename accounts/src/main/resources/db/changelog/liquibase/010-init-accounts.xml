<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="init_accounts" author="roman">
        <preConditions onFail="WARN">
            <tableExists tableName="accounts"/>
        </preConditions>
        <createTable tableName="accounts">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_accounts_user_id" referencedTableName="users" referencedColumnNames="id" deleteCascade="false"/>
            </column>
            <column name="currency" type="varchar(3)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="number">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <sql indexName="idx_accounts_currency" tableName="orders">
            CREATE UNIQUE INDEX uidx_accounts_currency ON accounts (currency, user_id);
        </sql>
        <rollback>
            <dropTable tableName="accounts"/>
        </rollback>
    </changeSet>
</databaseChangeLog>